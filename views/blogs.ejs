<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= blog.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', sans-serif;
}

body {
  line-height: 1.6;
  background: #f9f9f9;
  color: #333;
  text-align: center;
}

.container {
  width: 90%;
  max-width: 1200px;
  margin: auto;
}

/* Header */
header {
  background: #1f1f1f;
  color: white;
  padding: 1rem 0;
}

.logo {
  float: left;
  font-size: 1.5rem;
  font-weight: bold;
}

nav ul {
  float: right;
  list-style: none;
  display: flex;
  gap: 1.5rem;
}

nav a {
  color: white;
  text-decoration: none;
  transition: color 0.3s;
}

nav a:hover {
  color: #00bcd4;
  text-decoration: none;
}

header::after {
  content: "";
  display: table;
  clear: both;
}
    

    /* Blog Body */
    .blog-body {
      font-size: 1rem;
      margin: 20px auto 0 auto;
      padding: 30px;
      background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
      border: 1px solid #e9ecef;
      border-radius: 12px;
      text-align: justify;
      display: block;
      max-width: 800px;
      line-height: 1.8;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      position: relative;
      overflow: hidden;
    }

    .blog-body::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #00bcd4 0%, #0097a7 50%, #00bcd4 100%);
      border-radius: 12px 12px 0 0;
    }

    .blog-body br {
      margin-bottom: 1rem;
      display: block;
      content: "";
    }

    .blog-body p {
      margin-bottom: 1.5rem;
    }

    .blog-body p:first-child {
      font-size: 1.1rem;
      font-weight: 500;
      color: #2c3e50;
      margin-bottom: 2rem;
    }

    /* Comment Section */
    .comment {
      background-color: #f1f1f1;
      border-radius: 4px;
      padding: 10px;
      text-align: left; /* Keep comments aligned left for readability */
      max-width: 800px;
      margin: auto;
    }

    .comment p {
      margin: 0;
    }

    a {
      text-decoration: none;
      color: #007bff;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Center forms */
    form {
      max-width: 800px;
      margin: auto;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header>
    <div class="container">
      <h1 class="logo">BLOGIFY</h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/posts">Posts</a></li>
          <li><a href="/about">About</a></li>
          <% if (!locals.user) { %>
            <li><a href="/signin">Sign In</a></li>
          <% } else { %>
            <li><a href="/user/logout">Logout</a></li>
          <% } %>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Blog Content -->
  <div class="container mt-4">
    <h3><%= blog.title %></h3>
    <p>By <%= blog.createdby ? blog.createdby.fullname : "Unknown" %></p>
    <img class="img-fluid mt-3" src="<%= blog.coverImageUrl %>" alt="Blog Image" style="max-width: 800px; border-radius: 8px;">
    <div class="blog-body mt-3">
      <%- blog.body.replace(/\n/g, '<br>') %>
    </div>
  </div>

  <!-- Sign-in Alert -->
  <% if (!locals.user) { %>
    <div class="alert alert-danger mt-4 container" style="max-width: 800px;" role="alert">
      <a href="/signin">Sign in to add your comment</a>
    </div>
  <% } %>

  <!-- Comment Form -->
  <% if (locals.user) { %>
    <div class="container mt-4">
      <h3>Comments (<%= allComments.length %>)</h3>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <input type="text" name="content" class="form-control mb-2" placeholder="Write a comment" required>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  <% } %>

  <!-- Comment List -->
  <% if (locals.allComments) { %>
    <% allComments.forEach(comment => { %>
      <div class="comment container mt-3">
        <p><strong><%= comment.userid ? comment.userid.fullname : "Unknown" %>:</strong> <%= comment.content %></p>
      </div>
    <% }) %>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
