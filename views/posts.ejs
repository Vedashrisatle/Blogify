<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>


    <style>
    * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', sans-serif;
}

body {
  line-height: 1.6;
  background: #f9f9f9;
  color: #333;
}

.container {
  width: 90%;
  max-width: 1200px;
  margin: auto;
}

/* Header */
header {
  background: #1f1f1f;
  color: white;
  padding: 1rem 0;
}

.logo {
  float: left;
  font-size: 1.5rem;
  font-weight: bold;
}

nav ul {
  float: right;
  list-style: none;
  display: flex;
  gap: 1.5rem;
}

nav a {
  color: white;
  text-decoration: none;
  transition: color 0.3s;
}

nav a:hover {
  color: #00bcd4;
}

header::after {
  content: "";
  display: table;
  clear: both;
}


/* Search Bar */
.search-container {
  display: flex;
  justify-content: center;
  margin: 2rem 0;
  gap: 1rem;
}

.search-input {
  padding: 0.75rem 1rem;
  border: 2px solid #ddd;
  border-radius: 25px;
  font-size: 1rem;
  width: 100%;
  max-width: 400px;
  outline: none;
  transition: border-color 0.3s;
}

.search-input:focus {
  border-color: #00bcd4;
}

.search-btn, .clear-btn {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 25px;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s;
}

.search-btn {
  background: #00bcd4;
  color: white;
}

.search-btn:hover {
  background: #0097a7;
}

.clear-btn {
  background: #6c757d;
  color: white;
}

.clear-btn:hover {
  background: #5a6268;
}

/* Posts */
.posts-section {
  padding: 3rem 0;
}

.posts {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 2rem;
}

.post {
  background: white;
  border-radius: 5px;
  padding: 1rem;
  flex: 0 0 300px;
  max-width: 300px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
}

.post img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 5px;
  flex-shrink: 0;
}

.post h3 {
  margin: 1rem 0 0.5rem;
}

.post a {
  color: #00bcd4;
  text-decoration: none;
  font-weight: bold;
}


/* Footer */
footer {
  background: #1f1f1f;
  color: white;
  text-align: center;
  padding: 1rem 0;
}

</style>
</head>
<body>
    
  <!-- Header -->
  <header>
    <div class="container">
      <h1 class="logo">BLOGIFY</h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/posts">Posts</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/login">Login</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Recent Posts -->
  <section class="posts-section">
    <div class="container">
      <h2>All Posts</h2>

      <!-- Search Bar -->
      <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search posts by title..." class="search-input">
        <button id="searchBtn" class="search-btn">Search</button>
        <button id="clearBtn" class="clear-btn">Clear</button>
      </div>

      <div class="posts">
      <% if (locals.allBlogs) { %>
        <% allBlogs.forEach(blog => { %>
         <article class="post">
          <img src=<%=blog.coverImageUrl%> alt="Post Image" />
          <h3><%=blog.title%></h3>
          <p><%=blog.body.split(" ").slice(0, 25).join(" ")%>...</p>
          <a href="/blog/<%= blog._id %>">Read Blog</a>
        </article>
        <% }) %>
       
      <% } %>
        
        <!-- Add more posts here -->
      </div>
    </div>
  </section>

  

  <!-- Footer -->
  <footer>
    <div class="col-md-4 col-lg-4 col-xl-3 mx-auto mt-3">
        <h5 class="text-uppercase mb-4 font-weight-bold text-primary">BLOGIFY</h5>
        <p>
          A simple blogging platform for developers to share their thoughts, tutorials, and tech explorations.
        </p>
      </div>

      <!-- Links -->
      <div class="col-md-4 col-lg-3 col-xl-2 mx-auto mt-3">
        <h5 class="text-uppercase mb-4 font-weight-bold text-primary">Quick Links</h5>
        <p><a href="/" class="text-dark text-decoration-none">Home</a></p>
        <p><a href="/blog/add-newblog" class="text-dark text-decoration-none">Add Blog</a></p>
        <p><a href="/login" class="text-dark text-decoration-none">Login</a></p>
        <p><a href="/signin" class="text-dark text-decoration-none">Register</a></p>
      </div>

      <!-- Contact -->
      <div class="col-md-4 col-lg-4 col-xl-3 mx-auto mt-3">
        <h5 class="text-uppercase mb-4 font-weight-bold text-primary">Contact</h5>
        <p><i class="bi bi-house-door-fill me-2"></i> Pune, India</p>
        <p><i class="bi bi-envelope-fill me-2"></i> vedashrisatle@gmail.com</p>
        <p><i class="bi bi-phone-fill me-2"></i> +91 XXXXXXXXXX</p>
      </div>

    </div>

    <hr class="mb-4"/>
    <div class="container">
      <p>&copy; 2025 MyBlog. All rights reserved.</p>
      <div class="col-md-5 col-lg-4">
        <div class="text-center text-md-right">
          <a href="#" class="text-dark me-3"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-dark me-3"><i class="bi bi-twitter"></i></a>
          <a href="#" class="text-dark me-3"><i class="bi bi-instagram"></i></a>
          <a href="#" class="text-dark"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput');
      const searchBtn = document.getElementById('searchBtn');
      const clearBtn = document.getElementById('clearBtn');
      const posts = document.querySelectorAll('.post');

      // Search functionality
      function performSearch() {
        const searchTerm = searchInput.value.toLowerCase().trim();

        posts.forEach(post => {
          const title = post.querySelector('h3').textContent.toLowerCase();
          const content = post.querySelector('p').textContent.toLowerCase();

          if (title.includes(searchTerm) || content.includes(searchTerm)) {
            post.style.display = 'block';
          } else {
            post.style.display = 'none';
          }
        });
      }

      // Clear search
      function clearSearch() {
        searchInput.value = '';
        posts.forEach(post => {
          post.style.display = 'block';
        });
      }

      // Event listeners
      searchBtn.addEventListener('click', performSearch);

      clearBtn.addEventListener('click', clearSearch);

      // Search on Enter key press
      searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          performSearch();
        }
      });

      // Real-time search (optional - uncomment if you want live search)
      // searchInput.addEventListener('input', performSearch);
    });
  </script>

</body>
</html>
